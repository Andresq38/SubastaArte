@model SubastaArte.Application.DTOs.UsuarioDTO

@{
    ViewData["Title"] = "Detalle del Usuario";
}

<nav aria-label="miga de pan" class="mb-3">
    <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index" class="text-decoration-none">Inicio</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-action="Index" class="text-decoration-none">Usuarios</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Detalle</li>
    </ol>
</nav>

<div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-2 mb-3">
    <div>
        <h1 class="h3 mb-1">Detalle del usuario</h1>
        <p class="text-muted mb-0">Información general del usuario seleccionado.</p>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left me-1"></i> Volver
        </a>

        <a asp-action="Edit" asp-route-id="@Model.IdUsuario" class="btn btn-primary">
            <i class="bi bi-pencil-square me-1"></i> Editar
        </a>

        <a asp-action="Delete" asp-route-id="@Model.IdUsuario" class="btn btn-outline-danger">
            <i class="bi bi-trash me-1"></i> Eliminar
        </a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-body d-flex justify-content-between align-items-center">
        <span class="fw-semibold">Usuario</span>
        <span class="badge text-bg-light border">ID: @Model.IdUsuario</span>
    </div>

    <div class="card-body">
        <div class="row g-3">
            <div class="col-12 col-md-8">
                <div class="mb-2 text-muted small">Nombre</div>
                <div class="fs-5 fw-semibold">@Model.Nombre @Model.Apellido1 @Model.Apellido2 </div>
            </div>
        </div>
    </div>

    <div class="card-body">
        <div class="row g-3">
            <div class="col-12 col-md-8">
                <div class="mb-2 text-muted small">Correo Electronico</div>
                <div class="fs-5 fw-semibold">@Model.Email</div>
            </div>
        </div>
    </div>

    <div class="card-body">
        <div class="row g-3">
            <div class="col-12 col-md-8">
                <div class="mb-2 text-muted small">Rol Usuario</div>
                <div class="fs-5 fw-semibold">@Model.IdRolNavigation.Descripcion</div>
            </div>
        </div>
    </div>

    <div class="card-body">
        <div class="row g-3">
            <div class="col-12 col-md-8">
                <div class="mb-2 text-muted small">Estado Usuario</div>
                <div class="fs-5 fw-semibold">@Model.IdEstadoUsuarioNavigation.Nombre</div>
            </div>
        </div>
    </div>

    <div class="card-body">
        <div class="row g-3">
            <div class="col-12 col-md-8">
                <div class="mb-2 text-muted small">Fecha de Registro</div>
                <div class="fs-5 fw-semibold">@Model.FechaRegistro</div>
            </div>
        </div>
    </div>

    <div class="card-footer bg-body d-flex justify-content-end gap-2">
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-list-ul me-1"></i> Ir al listado
        </a>
        <a asp-action="Edit" asp-route-id="@Model.IdUsuario" class="btn btn-primary">
            <i class="bi bi-pencil-square me-1"></i> Editar
        </a>
    </div>
</div>
